@import vars
@import basic

html,body
  color: #444
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#land-banner
  width: 100%
  height: 350px
  background: url(img/bk.jpg) top center #eee
  .row
    max-width: 1024px
    width: auto
    margin: auto
  .inner
    padding: 150px 0 0
  img
    width: 400px
    margin: 50px
  i.fa
    font-size: 1.5em
    vertical-align: top
    margin-left: 10px

#root
  max-width: 1024px
  margin: auto

#nav
  max-width: 800px
  margin: 20px auto
  background: none
  border: none
  .nav > li
    float: left

#footer
  margin-top: 100px
  border-top: 1px solid #ccc
  padding: 20px
  max-width:  1024px
  margin: auto

.grayed
  color: #999

@media(max-width: 800px)
  #land-banner
    .row
      margin: 0
    img
      width: 80%
      margin: 20px 10%
    .inner
      padding: 20px
