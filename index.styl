@import url('http://fonts.googleapis.com/earlyaccess/notosanstc.css');
@import url('https://fonts.googleapis.com/css?family=Hind|Montserrat');

@import vars
@import basic

@font-face
  font-family: hhtpe-zh
  src: local("Heiti TC")
  url: local("微軟正黑體")
  url: local("Microsoft JhengHei")
  url: sans-serif
  unicode-range: U+4E00-9FFF

html,body
  color: #333
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-size: 18px

html.font-loaded
  body
    font-family: hhtpe-zh, Hind, Montserrat, Arial, sans-serif
  h1,h2,h3,h4,h5,h6
    font-family: hhtpe-zh, Montserrat, Hind, Arial, sans-serif

h2
  margin: 30px 0
  background: color.warning
  padding: 20px 10px
  color: #fff
  border-radius: 5px

h3
  border-bottom: 1px solid #999
  margin-bottom: 30px
  padding-bottom: 10px
  &:first-letter
    font-size: 1.5em
    font-weight: 900
    color: color.primary

a
  color: color.primary
#land-banner
  width: 100%
  height: 210px
  background: url(img/bk.jpg) top center #222
  .row
    max-width: 1024px
    width: auto
    margin: auto
  .inner
    padding: 50px 0 0
    color: #fff
    label
      font-weight: 200
  .banner
    width: 400px
    margin: 0
  .state
    position: absolute
    display: inline
    top: 5px
    z-index: 10
    margin: 0 0 0 -32px
    .loader, i.fa
      position: absolute
      opacity: 0
    i
      display: inline-block
      font-size: 24px
  .loader
    width: 24px

  .follow i.fa
    font-size: 1.5em
    vertical-align: top
    margin-left: 10px
#subscribe .ok
  display: none
#subscribe.ok .ok
  display: inline-block
#subscribe.has-error
  input
    border-color: #f00
  i.fa.fa-close
    opacity: 1

#root
  max-width: 1024px
  margin: auto

#nav
  background: color.primary
  border: 0
  border-radius: 0
#nav > div
  max-width: 1024px
  margin: 10px auto
  background: none
  border: none
  .nav > li
    float: left
  .navbar-nav > li.active > a
    background: #fff
    color: color.primary
    border-radius: 3px

#nav.navbar-default .navbar-nav > li > a
  color: #fff

#footer
  margin-top: 100px
  border-top: 1px solid #ccc
  padding: 20px 20px 40px 20px
  max-width:  1024px
  margin: auto
  min-height: 80px
  .pull-right
    margin-top: -5px

.grayed
  color: #999

@media(max-width: 768px)
  #land-banner
    .row
      margin: 0
      text-align: center
    img
      max-width: 80%
      margin: 5px 10%
      max-height: 203px
    .inner
      padding: 20px
  #nav .nav li span
    display: none
  #footer .pull-right
    display: none
  #root
    padding: 10px
@media(max-width: 440px)
  #land-banner img
    margin: 20px 10%

.about
  p
    margin: 20px

i.hh
  display: inline-block
  width: 12px
  height: 12px
  vertical-align: middle
  background: url(img/hh.svg) center center no-repeat

.avatar
  display: block
  border-radius: 50%
  margin: auto
.speaker
  text-align: center

.event
  border-radius: 5px
  padding: 10px 30px
  border: 1px solid #999
  margin-bottom: 20px
